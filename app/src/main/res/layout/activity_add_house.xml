<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.testsqlite.AddHouseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/selector_ll_text_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房产名"
            android:layout_marginRight="20dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_house_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入"
            android:textColor="#999999" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_house_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/selector_ll_text_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房产类型"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_house_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="住宅/小区/公寓"
            android:textColor="#000000"
            android:layout_marginRight="50dp"/>
    </LinearLayout>

    <TextView
        android:background="@drawable/selector_ll_text_color"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="房产照片"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/selector_ll_text_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间1"
            android:layout_marginRight="20dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_room1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入房间号"
            android:textColor="#999999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/selector_ll_text_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间2"
            android:layout_marginRight="20dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_room2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入房间号"
            android:textColor="#999999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/selector_ll_text_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间3"
            android:layout_marginRight="20dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_room3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入房间号"
            android:textColor="#999999" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_save"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"/>



</LinearLayout>
